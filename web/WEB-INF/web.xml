<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.BSP.Servlet.RegistServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.BSP.Servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updateUserPassword</servlet-name>
        <servlet-class>com.BSP.Servlet.UpdateUserPasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateUserPassword</servlet-name>
        <url-pattern>/updateUserPassword</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updateUserTel</servlet-name>
        <servlet-class>com.BSP.Servlet.UpdateUserTelServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateUserTel</servlet-name>
        <url-pattern>/updateUserTel</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>searchbook</servlet-name>
        <servlet-class>com.BSP.Servlet.SearchBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchbook</servlet-name>
        <url-pattern>/searchbook</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PageServlet</servlet-name>
        <servlet-class>com.BSP.Servlet.PageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PageServlet</servlet-name>
        <url-pattern>/PageServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deletebook</servlet-name>
        <servlet-class>com.BSP.Servlet.DeleteBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deletebook</servlet-name>
        <url-pattern>/deletebook</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addbook</servlet-name>
        <servlet-class>com.BSP.Servlet.AddBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addbook</servlet-name>
        <url-pattern>/addbook</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addComment</servlet-name>
        <servlet-class>com.BSP.Servlet.AddCommentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addComment</servlet-name>
        <url-pattern>/addComment</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteComment</servlet-name>
        <servlet-class>com.BSP.Servlet.DeleteCommentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteComment</servlet-name>
        <url-pattern>/deleteComment</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>commentPage</servlet-name>
        <servlet-class>com.BSP.Servlet.CommentPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>commentPage</servlet-name>
        <url-pattern>/commentPage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addCollection</servlet-name>
        <servlet-class>com.BSP.Servlet.AddCollectionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addCollection</servlet-name>
        <url-pattern>/addCollection</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteCollection</servlet-name>
        <servlet-class>com.BSP.Servlet.DeleteCollectionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteCollection</servlet-name>
        <url-pattern>/deleteCollection</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>collectionPage</servlet-name>
        <servlet-class>com.BSP.Servlet.CollectionPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>collectionPage</servlet-name>
        <url-pattern>/collectionPage</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>HeaderFilter</filter-name>
        <filter-class>com.BSP.Filter.HeaderFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>HeaderFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>JWTFilter</filter-name>
        <filter-class>com.BSP.Filter.JWTFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>JWTFilter</filter-name>
        <url-pattern>/index.jsp</url-pattern>
    </filter-mapping>


</web-app>